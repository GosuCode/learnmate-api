    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "bcrypt": "^6.0.0",
    "fastify": "^5.4.0",
    "fastify-zod": "^1.4.0",
